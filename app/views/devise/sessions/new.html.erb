
<h2 class="page-header" align="center"><strong>Iniciar Sesión</strong></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="form-group">
   <%= f.label :Correo, class: "sr-only" %><br />
    <%= f.label :Correo%><br />
    <div class="input-group">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo"%>
      </div>
  </div>
<div class="form-group">
  <%= f.label :Contraseña, class: "sr-only"%><br />
    <%= f.label :Contraseña%><br />
    <div class="input-group">
    <div class="input-group-addon">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Recordar_Contraseña %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>